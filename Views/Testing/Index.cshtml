<div class="container">

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Fill Required Fields</h3>
                </div>
                <div class="panel-body">
                    <form role="form" method="post" action="Add_Client_Staff_To_Database">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="First Name" name="First_Name" type="text" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Surname" name="Surname" type="text">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Middle Name" name="Middle_Name" type="text">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Role" name="Role" type="text">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Address" name="Address" type="text">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="City" name="City" type="text">
                            </div>
                            <div class="form-group">
