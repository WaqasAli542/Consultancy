@{
    ViewBag.Title = "Edit Customer";
}

@model ConsultancyApp.Models.Customer

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Contact</h3>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Edit Customer</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form id="demo-form2" method="post" action="../Customer/edit" data-parsley-validate class="form-horizontal form-label-left">

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                First Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" pattern="/^([\s.]?[a-zA-Z]+)+$/" id="first-name" name="First_Name" value=@Model.First_Name required="required" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Middle Name </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="middle-name" pattern="/^([\s.]?[a-zA-Z]+)+$/" class="form-control col-md-7 col-xs-12" type="text" value=@Model.Middle_Name required="required" name="Middle_Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                Last Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" pattern="/^([\s.]?[a-zA-Z]+)+$/" id="last-name" name="Surname" required="required" value=@Model.Surname class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Date Of Birth <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="birthday" class="date-picker form-control col-md-7 col-xs-12" value=@ViewBag.date name="Date_Of_Birth" required="required" type="date">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Expiry Date <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="birthday" class="date-picker form-control col-md-7 col-xs-12" value=@ViewBag.Expiry_date name="Date_Of_Birth" required="required" type="date">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Address</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="middle-name" class="form-control col-md-7 col-xs-12" type="text" value=@Model.Address required="required" name="Address">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">City</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="middle-name" pattern="/^([\s.]?[a-zA-Z]+)+$/" class="form-control col-md-7 col-xs-12" value=@Model.City type="text" required="required" name="City">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Country</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="middle-name" class="form-control col-md-7 col-xs-12" value=@Model.Country type="text" required="required" name="Country">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Nationality</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="middle-name" class="form-control col-md-7 col-xs-12" value=@Model.Country_Of_Nationality type="text" required="required" name="Country_Of_Nationality">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Phone-Home</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="middle-name" class="form-control col-md-7 col-xs-12" value=@Model.Phone_home oninput="this.value=this.value.replace(/[^0-9]/g,'');" pattern=".{9,16}" type="text" required="required" name="Phone_Home">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Phone-Work</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="middle-name" class="form-control col-md-7 col-xs-12" oninput="this.value=this.value.replace(/[^0-9]/g,'');" pattern=".{9,16}" type="text" value=@Model.Phone_Work required="required" name="Phone_Work">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Phone-Mobile</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="middle-name" class="form-control col-md-7 col-xs-12" oninput="this.value=this.value.replace(/[^0-9]/g,'');" pattern=".{9,16}" type="text" value=@Model.Phone_Mobile required="required" name="Phone_Mobile">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Postal Code</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="middle-name" class="form-control col-md-7 col-xs-12" type="text" value=@Model.Phone_Mobile required="required" name="Post_Code">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Email</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="middle-name" class="form-control col-md-7 col-xs-12" value=@Model.Email type="email" required="required" name="Email">
                            </div>
                            @Html.HiddenFor(m => m.ID)
                            @Html.HiddenFor(m => m.Visa_Expiry_Date)
                            @Html.HiddenFor(m => m.Post_Code)
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 text-right">
                                @Html.ActionLink("Back", "Index",null, new { @class = "btn btn-sm btn-default" })
                                <button class="btn btn-success" type="submit">Save Customer</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
