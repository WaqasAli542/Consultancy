@{
    ViewBag.Title = "Create Consultancy";
}
@model ConsultancyApp.Models.Customer

<script>
    $(document).ready(function () {
        $('.saveButton').click(function () {
            $(this).closest('form')[0].submit();
        });
    });
</script>
<style>
    .btn{
        font-weight:bold;
    }
</style>
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3 class="dark">Consultancy/Create Consultancy</h3>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Create Consultancy</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form id="demo-form2" method="post" action="../Consultancy/processConsultancy" data-parsley-validate class="form-horizontal form-label-left">


                            <div class="form-group">

                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    Customer Name <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select class="selectpicker form-control " name="_firstName" required="required">
                                        <option class="active" selected disabled value="">Customer Name</option>

                                        @foreach (var customer in ViewBag.Customer)
                                        {
                                            <option value=@customer.ID>@customer.First_Name</option>
                                           
                                        }


                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-3 col-sm-6 col-xs-12">
                                    <p>Not Customer? <a href="#">Create Customer</a></p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Date</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="middle-name" class="form-control col-md-7 col-xs-12" required="required" type="date" name="Date">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Period</label>
                                <div class="col-md-5 col-sm-5 col-xs-12">
                                    <input id="middle-name" class="form-control col-md-7 col-xs-12" required="required" oninput="this.value=this.value.replace(/[^0-9]/g,'');" pattern=".{1,16}" type="text" name="Period">
                                </div>
                                <div class="col-md-1 col-sm-1 col-xs-12">
                                    <p><strong> Hours</strong></p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Price</label>
                                <div class="col-md-4 col-sm-3 col-xs-12">
                                    <input id="middle-name" class="form-control col-md-7 col-xs-12" required="required" oninput="this.value=this.value.replace(/[^0-9]/g,'');" pattern=".{1,16}" type="text" name="_price">
                                </div>
                                <div class="col-md-2 col-sm-3 col-xs-12">
                                    <select class="selectpicker form-control " required="required" name="_currency">
                                        <option class="active" selected disabled value="">Currency Type</option>
                                        <option>Dollar</option>
                                        <option>euro</option>
                                        <option>CAD</option>
                                        <option>GBP</option>
                                        <option>AUD</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Description">
                                    Description <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <textarea minlength="20" rows="3" style="width:100%;" name="Note" required="required" placeholder="Enter description here..."></textarea>
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 text-right" >
                                   
                                    <input type="submit" class="btn btn-sm btn-success" name="_command" value="Preview" />
                                    <input type="submit" class="btn btn-sm btn-success" name="_command" value="Save & Upload" />

                                </div>
                            </div>

                        </form>

                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


